@model List<StockManagement.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Popular Items</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top p-3" alt="@product.Name" style="height: 200px; object-fit: contain;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-success fw-bold">@product.Price.ToString("C")</span>
                            <span class="badge bg-info">In Stock: @product.Quantity</span>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <a asp-controller="Order"
                           asp-action="CreateOrder"
                           asp-route-productId="@product.Id"
                           class="btn btn-primary w-100">
                            <i class="fas fa-shopping-cart"></i> Order Now
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>