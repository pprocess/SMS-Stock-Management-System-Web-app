@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4 class="alert-heading">Permission Required!</h4>
                        <p>You don't have permission to access this resource.</p>
                        <hr>
                        <p class="mb-0">If you believe this is an error, please contact support or try logging in with a different account.</p>
                    </div>
                    <div class="text-center">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                            <i class="fas fa-home"></i> Return to Home
                        </a>
                        @if (!User.Identity.IsAuthenticated)
                        {
                                <a asp-action="Login" asp-controller="Auth" class="btn btn-success ml-2">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>