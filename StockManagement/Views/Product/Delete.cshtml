@model StockManagement.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Product</h1>
    <hr />

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this product?</h4>
    </div>

    <dl class="row">
        <dt class="col-sm-2">Product Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Current Stock:</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Confirm Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>